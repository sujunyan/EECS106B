<launch>

  <!-- <arg name="marker_size" default="5.6" /> -->
  <arg name="marker_size" default="10" />
  <arg name="max_new_marker_error" default="0.08" />
  <arg name="max_track_error" default="0.2" />
  <arg name="cam_image_topic" default="/cameras/right_hand_camera/image" />
  <arg name="cam_info_topic" default="/cameras/right_hand_camera/camera_info" />
  <arg name="output_frame" default="right_hand_camera" />

  <node name="ar_track_alvar_right_hand" pkg="ar_track_alvar" type="individualMarkersNoKinect" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)" />

 <!-- <node name="left_hand_camera_tf" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 1 left_hand_camera reference/left_hand_camera 100"/> -->

</launch>
